<!-- Modal Agregar Articulo -->
<div class="modal fade" id="AddArticle" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Articulo</h5>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
                    <input type="text" id="NombreInput" value="" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <!-- Titles -->
                <form class="row" style="margin-bottom: 2%;">
                    <div class="col">
                        <span>XS</span>
                    </div>
                    <div class="col">
                        <span>S</span>
                    </div>
                    <div class="col">
                        <span>M</span>
                    </div>
                    <div class="col">
                        <span>L</span>
                    </div>
                    <div class="col">
                        <span>XL</span>
                    </div>
                </form>

                <!-- Price -->
                <form class="row" style="margin-bottom: 2%;">
                    <div class="col">
                        <label class="visually-hidden">Precio XS</label>
                        <input type="text" class="form-control"  placeholder="Price XS" id="PrecioXS">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Precio S</label>
                        <input type="text" class="form-control" placeholder="Price S" id="PrecioS">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Precio M</label>
                        <input type="text" class="form-control" placeholder="Price M" id="PrecioM">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Precio L</label>
                        <input type="text" class="form-control" placeholder="Price L" id="PrecioL">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Precio XL</label>
                        <input type="text" class="form-control" placeholder="Price XL" id="PrecioXL">
                    </div>
                </form>

                <!-- Stock -->
                <form class="row" style="margin-bottom: 2%;">
                    <div class="col">
                        <label class="visually-hidden">Stock XS</label>
                        <input type="text" class="form-control" placeholder="Stock XS" id="StockXS">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Stock S</label>
                        <input type="text" class="form-control" placeholder="Stock S" id="StockS">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Stock M</label>
                        <input type="text" class="form-control" placeholder="Stock M" id="StockM">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Stock L</label>
                        <input type="text" class="form-control" placeholder="Stock L" id="StockL">
                    </div>
                    <div class="col">
                        <label class="visually-hidden">Stock XL</label>
                        <input type="text" class="form-control" placeholder="Stock XL" id="StockXL">
                    </div>
                </form>

                <!--
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Precio</span>
                    <span class="input-group-text" style="color: #005c1c; background-color: #FFFFFF;">$</span>
                    <input type="text" id="PrecioInput" value="" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Cant. en Stock</span>
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                -->

                <div class="disabled input-group mb-3">
                    <label class="input-group-text" for="disabledinputGroupSelect01">Categorias</label>
                    <select class="form-select" id="inputGroupSelect01" disabled>
                        <option selected>Elige una categoria ...</option>
                        <option value="1">Remeras</option>
                        <option value="2">Pantalones</option>
                        <option value="3">Calzas</option>
                        <option value="4">Tops</option>
                    </select>
                </div>
                <hr />
                <div class="mb-3">
                    <label for="formFileSm" class="form-label">Imagen del articulo</label>
                    <input class="form-control form-control-sm" id="formFileSm" type="file" accpet="image/*" multiple disabled>
                </div>
                <div class="mb-3">
                    <label for="formFileSm" class="form-label">Preview del articulo</label>
                    <input class="form-control form-control-sm" id="formFileSm" type="file" accpet="image/*" multiple disabled>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="CloseButton" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="addArticulo()">Agregar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar Categoria -->
