@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
    <head>
    
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>MagentaSportwear</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <link rel="stylesheet" href="/css/StyleSheet.css">

    </head>  

    <body class="user-select-none" style="background-color: #F7F7F7;">

        <style>
            .side-menu {
                background-color: white;
                border-radius: 15px;
                margin-top: 3%;
                margin-left: 3%;
            }

            .side-ul {
                list-style-type: none;
                padding-top: 15%;
            }

            .side-item {
                max-width: 30%;
                width: 20%;
                margin: 0;
                padding-top: 1rem;
                padding-bottom: 1rem;
                margin-right: 2rem;
            }

            .text-nowrap {
                display: none;
            }

            .icon:hover + .hide {
                display: inline-flex;
                color: black;
                padding-left: 6px;
            }
        </style>

        <!-- Main Navbar -->
        <header>
            <nav class="navbar navbar-expand-md navbar-dark box-shadow border-bottom" style="background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 4rem;">
                <div class="container">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand">
                                <img src="~/Imagenes/MagentasportwearLogo.png" alt="MagentaSportwearLogo" width="30" height="30">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-brand text-white">Dashboard</a>
                        </li>
                    </ul>
                    <a class="nav-link text-white position-absolute end-0" style="margin-right: 20%;" asp-area="" asp-controller="Home" asp-action="Index">Salir</a>
                </div>
            </nav>
        </header>

        <!-- Body -->
        <div class="container" style="background-color: #F7F7F7;">
            <main role="main" class="pb-3">

                <div class="side-menu box-shadow position-absolute start-0">

                    <ul class="side-ul">
                        <li class="side-item">
                            <a href="/AdminPanel">
                                <div class="d-flex">
                                    <span class="icon"> <img src="https://img.icons8.com/small/20/000000/home-page.png" /> </span>
                                    <span class="text-nowrap hide">Inicio</span>
                                </div>
                            </a>
                        </li>
                        <li class="side-item">
                            <a href="/AdminPanel/Articulos">
                                <div class="d-flex">
                                    <span class="icon"> <img src="https://img.icons8.com/small/20/000000/hanger.png" /> </span>
                                    <span class="text-nowrap hide">Articulos</span>
                                </div>
                            </a>
                        </li>
                        <li class="side-item">
                            <a href="/AdminPanel/DescargarEstadisticas">
                                <div class="d-flex">
                                    <span class="icon"> <img src="https://img.icons8.com/small/20/000000/export-csv.png" /> </span>
                                    <span class="text-nowrap hide">Descargar Estadisticas</span>
                                </div>
                            </a>
                        </li>
                    </ul>

                </div>

                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
